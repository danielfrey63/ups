<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>ch.xmatrix.le</groupId>
    <artifactId>ch.xmatrix.le.application-test</artifactId>
    <name>eBot 5 Test</name>
    <version>5.0.2492</version>
    <parent>
        <groupId>ch.xmatrix.common</groupId>
        <artifactId>ch.xmatrix.common.build</artifactId>
        <version>1.0</version>
        <relativePath>../../Common/Build</relativePath>
    </parent>
    <properties>
        <main-class>com.ethz.geobot.herbar.gui.AppHerbar</main-class>
        <codebase>http://geobot1.ethz.ch/hcd/webstart-${project.version}</codebase>
        <default-site>scp://geobot1.ethz.ch/hcd/site</default-site>
        <max-heap-size>512m</max-heap-size>
    </properties>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>dependency/</classpathPrefix>
                        </manifest>
                        <manifestEntries>
                            <Main-Class>ch.xmatrix.test.JNLPTest</Main-Class>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <!-- Run with mvn install org.codehaus.mojo.webstart:webstart-maven-plugin:jnlp -->
            <!-- Uses the ${main-class} property to indicate the JNLP main class -->
            <!-- Note: Seems that this plugin doesn't copy runtime dependencies -->
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>**/*.psd</exclude>
                    <exclude>**/*.ai</exclude>
                    <exclude>xmatrix.properties</exclude>
                </excludes>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>xmatrix.properties</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>

  <scm>
    <developerConnection>scm:svn:https://svn.id.ethz.ch/ups/tags/ch.xmatrix.le.application-test-5.0.2492</developerConnection>
    <url>https://svn.id.ethz.ch/viewvc/ups/tags/ch.xmatrix.le.application-test-5.0.2492</url>
  </scm>
</project>
