<?xml version="1.0" encoding="UTF-8"?>
<project
        xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
        >
    <parent>
        <groupId>ch.xmatrix</groupId>
        <artifactId>build</artifactId>
        <version>1.0</version>
        <relativePath>../../../BuildCommon</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>ch.xmatrix.ups</groupId>
    <artifactId>ulc</artifactId>
    <name>UPS List-Converter</name>
    <version>2.0-20070222</version>
    <description>Mit diesem Tool lassen sich Pflanzenlisten aus dem UPS Studenten-Tool in Sofflisten für die Herbar
        CD-ROM Version 2 konvertieren. Das Tool übernimmt auch das platzieren der Listen am richtigen Ort, so dass beim
        nächsten Start der HCD die Stofflisten zur Verfügung stehen. Insgesamt werden sieben Stofflisten erzeugt: je
        eine für Arten, Gattungen, Unterfamilien, Familien, Ordnungen, Ordnungs-Gruppen und Unterklassen.
    </description>
    <organization>
        <name>Geobotanisches Institut ETH</name>
        <url>http://www.geobot.umnw.ethz.ch</url>
    </organization>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                        <manifestEntries>
                            <Main-Class>ch.xmatrix.ups.hcd.Converter</Main-Class>
                            <Subversion-Build>${project.version}-${buildNumber}</Subversion-Build>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo.webstart</groupId>
                <artifactId>webstart-maven-plugin</artifactId>
                <configuration>
                    <jnlp>
                        <mainClass>ch.xmatrix.ups.hcd.Converter</mainClass>
                    </jnlp>
                    <sign>
                        <keystore>${project.parent.relativePath}/keystore/keystore.jks</keystore>
                        <keypass>nxd085e</keypass>
                        <storepass>nxd085e</storepass>
                        <alias>hcd</alias>
                        <verify>true</verify>
                    </sign>
                    <outputJarVersions>true</outputJarVersions>
                    <verbose>true</verbose>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>ch.xmatrix</groupId>
            <artifactId>common</artifactId>
            <version>2.0-20090323</version>
        </dependency>
        <dependency>
            <groupId>ch.xmatrix.ups</groupId>
            <artifactId>common</artifactId>
            <version>2.0-20090323</version>
        </dependency>
        <dependency>
            <groupId>ch.xmatrix.ups.data</groupId>
            <artifactId>exams</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>ch.xmatrix.ups.data</groupId>
            <artifactId>constraints</artifactId>
            <version>SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>ch.xmatrix.ups.data</groupId>
            <artifactId>taxa</artifactId>
            <version>2.0.2</version>
        </dependency>
        <dependency>
            <groupId>com.jgoodies</groupId>
            <artifactId>binding</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>com.thoughtworks.xstream</groupId>
            <artifactId>xstream</artifactId>
            <version>1.2.2</version>
        </dependency>
        <dependency>
            <groupId>xpp3</groupId>
            <artifactId>xpp3</artifactId>
            <version>1.1.3.3</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <reporting>
        <plugins>
            <plugin>
                <artifactId>maven-changes-plugin</artifactId>
                <configuration>
                    <xmlPath>${basedir}/xdocs/changes.xml</xmlPath>
                </configuration>
            </plugin>
        </plugins>
    </reporting>
    <distributionManagement>
        <site>
            <id>default</id>
            <name>Default Site</name>
            <url>file:///var/www/html/ups/site/ulc/</url>
        </site>
    </distributionManagement>
</project>